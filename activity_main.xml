<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="false"
    android:background="#DF000000"
    android:duplicateParentState="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="93dp"
        android:layout_y="16dp"
        android:background="#00FFFFFF"
        android:text="Student Database"
        android:textColor="#DAFFFFFF"
        android:textColorLink="#004E1717"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/StudentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="44dp"
        android:layout_y="86dp"
        android:background="#00FFFFFF"
        android:text="Student ID:"
        android:textColor="#DAFFFFFF"
        android:textColorLink="#004E1717"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Rollno"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="87dp"
        android:background="#19FFFFFF"
        android:inputType="number"
        android:textColor="#DAFFFFFF"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="44dp"
        android:layout_y="136dp"
        android:background="#00FFFFFF"
        android:text="Student Name:"
        android:textColor="#DAFFFFFF"
        android:textColorLink="#004E1717"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="201dp"
        android:layout_y="137dp"
        android:background="#19FFFFFF"
        android:inputType="text"
        android:textColor="#DAFFFFFF"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="45dp"
        android:layout_y="183dp"
        android:background="#00FFFFFF"
        android:text="Grade:"
        android:textColor="#DAFFFFFF"
        android:textColorLink="#004E1717"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Marks"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="199dp"
        android:layout_y="185dp"
        android:background="#19FFFFFF"
        android:inputType="number"
        android:textColor="#DAFFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Insert"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="41dp"
        android:layout_y="254dp"
        android:background="@color/colorPrimary"
        android:text="Add "
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Delete"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="134dp"
        android:layout_y="414dp"
        android:background="@color/colorPrimary"
        android:text="Delete"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Update"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="229dp"
        android:layout_y="253dp"
        android:background="@color/colorPrimary"
        android:text="Update"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <Button
        android:id="@+id/View"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="43dp"
        android:layout_y="338dp"
        android:background="@color/colorPrimary"
        android:text="Find "
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ViewAll"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_x="229dp"
        android:layout_y="337dp"
        android:background="@color/colorPrimary"
        android:text="Show All"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

</AbsoluteLayout>
